block vars

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} | tradeX
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    )
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    )
    style.
      /* Modern SaaS-style Navbar */
      nav.navbar-custom {
        background-color: #fff;
        border-bottom: 1px solid #e5e5e5;
      }
      nav.navbar-custom .navbar-brand {
        color: #FF8C00;
        font-weight: 700;
        font-size: 1.6rem;
      }
      nav.navbar-custom .navbar-brand:hover {
        opacity: 0.8;
      }
      nav.navbar-custom .nav-link {
        color: #555;
        font-weight: 500;
        margin-left: 1rem;
        transition: all 0.3s ease;
      }
      nav.navbar-custom .nav-link:hover,
      nav.navbar-custom .nav-link.active {
        color: #FF8C00;
        background-color: rgba(255, 140, 0, 0.1);
        border-radius: 0.5rem;
        padding: 0.3rem 0.7rem;
      }
      nav.navbar-custom .btn-primary {
        background-color: #FF8C00;
        border-color: #FF8C00;
        font-weight: 500;
      }
      nav.navbar-custom .btn-primary:hover {
        background-color: #e67e00;
        border-color: #e67e00;
      }
      /* Modern SaaS Footer */
      footer.footer-custom {
        background-color: #111;
        color: #fff;
        padding: 3rem 0 2rem;
        font-size: 0.9rem;
      }
      footer.footer-custom a {
        color: #FF8C00;
        text-decoration: none;
      }
      footer.footer-custom a:hover {
        text-decoration: underline;
        color: #ffa733;
      }
      footer.footer-custom .footer-title {
        font-weight: 600;
        margin-bottom: 1rem;
      }
      footer.footer-custom .footer-social a {
        margin-right: 1rem;
        font-size: 1.2rem;
        transition: 0.3s;
      }
      footer.footer-custom .footer-social a:hover {
        color: #ffa733;
      }

  body
    // Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-custom.py-3
      .container
        a.navbar-brand(href="/") TradeX
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.align-items-center
            li.nav-item
              a.nav-link(class=(company=='home/' ? 'active' : ''), href="/") Home
            li.nav-item
              a.nav-link(class=(company=='about/' ? 'active' : ''), href="/about") About
            li.nav-item
              a.nav-link(class=(company=='services/' ? 'active' : ''), href="/services") Services
            li.nav-item.ms-2
              a.btn.btn-primary(href="/register") Open Account

    // Main Content
    main.container.mt-5
      h1.text-center.mb-4 #{title}
      block body

    // Footer
    footer.footer-custom
      .container
        .row
          .col-md-4.mb-4
            h5.footer-title tradeX
            p Secure, reliable, and fast digital banking.
          .col-md-4.mb-4
            h5.footer-title Quick Links
            ul.list-unstyled
              li
                a(href="/") Home
              li
                a(href="/about") About Us
              li
                a(href="/services") Services
          .col-md-4.mb-4
            h5.footer-title Follow Us
            .footer-social
              a(href="#", target="_blank")
                i.bi.bi-facebook
              a(href="#", target="_blank")
                i.bi.bi-twitter
              a(href="#", target="_blank")
                i.bi.bi-linkedin
              a(href="#", target="_blank")
                i.bi.bi-instagram
        hr.bg-secondary
        p.text-center.mb-0 &copy; 2025 BankX. All rights reserved.

    // Scripts
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    )

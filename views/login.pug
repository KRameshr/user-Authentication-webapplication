extends template

block vars
  - var company = 'login/'
block body
  // Full-page centered login form on light orange background
  .container-fluid.d-flex.justify-content-center.align-items-center(style="min-height: 100vh; background:#fff4e6;")
    .card.shadow-lg.rounded.p-5.animate__animated.animate__fadeIn(style="max-width: 450px; width: 100%; border-top: 5px solid #FF8C00;")
      h2.text-center.mb-4.fw-bold.text-warning Login

      form(method="post" action="/login")
        // Email Input
        .mb-3
          label.form-label(for="email") Email Address
          input.form-control(type="email" name="email" id="email" placeholder="you@example.com" required)

        // Password Input with Eye Icon
        .mb-3
          label.form-label(for="password") Password
          .input-group
            input#password.form-control(type="password" name="password" placeholder="Enter your password" required minlength="6")
            span.input-group-text.password-toggle(style="cursor:pointer; background:#FFE5B4; color:#FF8C00;" onclick="togglePassword()")
              i.bi.bi-eye-slash-fill#toggleIcon

        // Login Button
        button.btn.btn-warning.w-100.py-2.fw-bold(type="submit") Login

      // Register link
      p.text-center.mt-4.mb-0
        | New user? 
        a.text-warning.fw-bold.ms-2(href="/register") Register here

  // Custom CSS
  style.
    .card input:focus {
      box-shadow: 0 0 5px rgba(255,140,0,0.7);
      border-color: #FF8C00;
    }
    .card .btn-warning:hover {
      background-color: #e67e00;
      transform: translateY(-2px);
      transition: all 0.3s ease;
    }
    /* Fix the eye icon vertical alignment */
    .input-group .password-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.375rem 0.75rem;
      border-left: 0;
    }
    .input-group .password-toggle i {
      font-size: 1.1rem;
    }

  // Password toggle script
  script.
    function togglePassword() {
      const password = document.getElementById('password');
      const icon = document.getElementById('toggleIcon');
      if (password.type === 'password') {
        password.type = 'text';
        icon.classList.remove('bi-eye-slash-fill');
        icon.classList.add('bi-eye-fill');
      } else {
        password.type = 'password';
        icon.classList.remove('bi-eye-fill');
        icon.classList.add('bi-eye-slash-fill');
      }
    }
